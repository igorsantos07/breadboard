item-list
  border: 1px dashed #BBB
  border-width: 0 1px
  margin-right: -1px
  min-width: 160px

  h2
    text-transform: capitalize
    font-size: 21px
    line-height: 18px
    min-width: 120px
    margin-top: 10px
    margin-bottom: 15px

  .thumbnail
    background-color: #EEE
    padding: 5px 10px
    position: relative
    h3
      font-size: 18px
      font-weight: bold
      line-height: 24px
      margin-top: 0
      margin-bottom: 5px
      cursor: zoom-in
      &.with-details
        cursor: zoom-out
    p
      margin: 0

hypothesis-block
  position: relative
  display: block
  article span
    font-style: italic
  .panel-footer
    padding: 0
    table
      width: 100%
      color: #777
      td
        padding: 5px 10px
        &.criterion
          text-align: right
    p
      display: inline-block
      margin: 0 10px 0 0
      font-size: 14px
      span.glyphicon
        font-size: 18px
        vertical-align: sub
        padding-right: 5px

.btn-group.actions
  position: absolute
  top: -1px
  right: -1px
