.nav-tabs
  li
    bottom: -7px
    &.active
      bottom: auto
      font-size: 16px

h2
  font-size: 21px
  margin-top: 10px

item-list
  border: 1px dashed #BBB
  border-width: 0 1px
  margin-right: -1px
  min-width: 160px

  h2
    text-transform: capitalize
    min-width: 120px
    line-height: 18px
    margin-bottom: 15px
    span.glyphicon
      text-align: bottom

  .thumbnail
    background-color: #EEE
    padding: 5px 10px
    position: relative
    h3
      font-size: 18px
      font-weight: bold
      line-height: 24px
      margin-top: 0
      margin-bottom: 5px
      cursor: zoom-in
      &.with-details
        cursor: zoom-out
    p
      margin: 0

hypotheses-list
  .nav.panel
    margin: 10px 0

hypothesis-block
  position: relative
  display: block
  article span
    font-style: italic
  .panel-footer
    padding: 0
    color: #777
    .method, .criterion
      padding: 5px 10px
    @media (min-width: 768px)
      .criterion
        text-align: right
    p
      display: inline-block
      margin: 0 10px 0 0
      font-size: 14px
      span.glyphicon
        font-size: 18px
        vertical-align: sub
        padding-right: 5px

.btn-group.actions
  position: absolute
  top: -1px
  right: -1px
