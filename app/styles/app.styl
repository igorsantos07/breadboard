@import "boostrap-extras"
@import "sticky-footer"
@import "project"

@media screen and (max-width: 415px)
  .navbar-brand small span.text
    display: none

.navbar-brand a
  color: white
  font-weight: bold
  font-size: 24px

.item-list
  border: 1px dashed #BBB
  border-width: 0 1px
  margin-right: -1px
  min-width: 160px

  h2
    font-size: 21px
    line-height: 18px
    min-width: 120px
    margin-top: 10px
    margin-bottom: 15px

  .thumbnail
    background-color: #EEE
    padding: 5px 10px
    position: relative
    .actions
      position: absolute
      top: -1px
      right: -1px
    h3
      font-size: 18px
      font-weight: bold
      line-height: 24px
      margin-top: 0
      margin-bottom: 5px
      cursor: zoom-in
      &.with-details
        cursor: zoom-out
    p
      margin: 0

#hypothesis td
    vertical-align: middle
    &.desc span
      font-style: italic

footer nav.navbar
  color: white
  margin-bottom: 0
  min-height: initial
  line-height: 25px

