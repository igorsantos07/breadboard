<div class="modal fade" id="add-{{view.title}}">
	<div class="modal-dialog modal-sm">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
				<h4 class="modal-title">New {{view.title}}</h4>
			</div>

			<div class="modal-body">
        {{input type="hidden" name="type" value=view.new.type}}
        <div class="form-group">
          <label for="add-{{view.singular}}-title">Title</label>
              {{input type="text" class="form-control" name="title" value=view.new.title}}
        </div>

        <div class="form-group">
          <label for="add-{{view.singular}}-title">Description</label>
              {{textarea class="form-control" name="description" value=view.new.description}}
        </div>
			</div>

			<div class="modal-footer">
				<button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cancel</button>
				<button type="button" {{action 'addItem'}} class="btn btn-success
				btn-sm">Save</button>
			</div>
		</div>
	</div>
</div>
