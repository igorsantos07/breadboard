<div class="container-fluid">
	<div class="row">
		<div class="col-lg-7 col-md-12" id="items">

      <div class="row">
        {{item-list board=model type="customer" new=new.customer items=model.customers}}
        {{item-list board=model type="problem"  new=new.problem  items=model.problems}}
        {{item-list board=model type="solution" new=new.solution items=model.solutions}}
        {{item-list board=model type="risk"     new=new.risk     items=model.risks}}
      </div>

    </div>

		<div class="col-lg-5 col-md-12" id="hypothesis">

      {{! TODO: turn this into a partial, or a component }}
      <table class="table table-bordered table-striped table-hover" style="width: 100%">
        <thead>
          <tr>
            <th>Hypothesis</th>
            <th>Method</th>
            <th>Criterion</th>
          </tr>
        </thead>
        <tbody>
          {{#each hyp in model.hypotheses}}
            {{hypothesis-block hyp=hyp}}
          {{/each}}
        </tbody>
      </table>

    </div>
	</div>
</div>
