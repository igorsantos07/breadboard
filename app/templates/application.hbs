{{! this is all contained into a .page-container, that's the main Ember view }}
<header>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#menu">
          <span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
        </button>
        <div class="navbar-brand">
          {{#link-to 'index'}}
            <div id="logo"><img src="img/logo.png"></div>
            {{#unless board_name}} ProtoBoard{{/unless}}
          {{/link-to}}
          {{#if board_name}}
            <span id="project-name">{{project_name}}</span> /
            <span id="board-name">{{board_name}}</span>
          {{/if}}

          {{#if board}}
            <small>[
              <span class="text-success">{{valid}}</span> /
              <span class="text-danger">{{invalid}}</span> /
              <span class="text-info">{{total}}</span>
              <span class="text">hypotheses</span>
            ]</small>
          {{/if}}
        </div>
      </div>

      <div class="collapse navbar-collapse" id="menu">
        <ul class="nav navbar-nav">
          {{#if logged}}
            <li>{{link-to 'Sign up' 'account.sign-up'}}</li>
            <li>{{link-to 'Login' 'account.login'}}</li>
          {{else}}
            <li>{{link-to 'My Projects' 'projects'}}</li>
            <li>{{link-to 'Logout' 'account.logout'}}</li>
          {{/if}}
        </ul>
      </div>
    </div>
  </nav>
</header>

<section>
  <div class="container">
    {{outlet}}
  </div>
</section>

<footer>
  <nav class="navbar navbar-default text-center">
    <a href="http://www.igorsantos.com.br">Igor Santos</a> ||
    <a href="https://github.com/igorsantos07/protoboard">Source Code</a> ||
    <a href="https://github.com/igorsantos07/protoboard/issues">Issues</a>
  </nav>
</footer>