<h2>
    All projects
    {{#if model}} {{! FIXME: in which case we would not have a model here? }}
      <small><a href="#new-project" data-toggle="modal">New project</a></small>
    {{/if}}
</h2>

  {{#if model}}
    <div class="row">
      {{#each model as |project|}}
        <project-block project={{project}} class="col-xs-12 col-sm-6 col-md-4 col-lg-3" />
      {{/each}}
    </div>
  {{else}}
    <h3 class="well well-lg text-center">
        No projects yet...
        <a href="#new-project" class="alert-link" data-toggle="modal">Create one</a>!
    </h3>
  {{/if}}

{{partial "project/_new"}}
