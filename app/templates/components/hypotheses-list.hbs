<table class="table table-bordered table-striped table-hover">
	<thead>
	<tr>
		<th>
      Hypothesis

      <div class="btn-group btn-group-split pull-right">
        <button class="btn btn-default btn-xs" {{action 'infiniteImprobabilityGenerator'}}
	        title="Generates a new hypothesis from random elements" data-toggle="tooltip">
          <span class="glyphicon glyphicon-random" aria-hidden="true"></span>
        </button>

        <button class="btn btn-default btn-xs" {{action 'finiteImprobabilityGenerator'}}
          title="Write a new hypothesis from chosen elements" data-toggle="tooltip">
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </button>
      </div>
    </th>
		<th>Method</th>
		<th>Criterion</th>
	</tr>
	</thead>
	<tbody>
    {{#each board.hypotheses as |hyp|}}
      {{hypothesis-block hypothesis=hyp}}
    {{/each}}
	</tbody>
</table>