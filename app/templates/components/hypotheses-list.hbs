<div class="nav panel">
	<button class="btn btn-primary btn-sm" data-toggle="collapse" data-target="#filters">
		<span class="glyphicon glyphicon-filter" aria-hidden="true"></span>
		<span>Filter hypotheses</span>
	</button>

  <div class="btn-group btn-group-split pull-right">
    <button class="btn btn-default btn-sm" {{action 'infiniteImprobabilityGenerator'}}
      title="Creates a new hypothesis selecting random elements" data-toggle="tooltip">
      <span class="glyphicon glyphicon-random" aria-hidden="true"></span>
	    <span>Generate random</span>
    </button>

    <button class="btn btn-default btn-sm disabled" {{action 'finiteImprobabilityGenerator'}}
      title="Choose elements and create a hypothesis from that" data-toggle="tooltip">
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
	    <span>Write one</span>
    </button>
  </div>
</div>

<div class="collapse panel panel-primary panel-sm" id="filters">
	<div class="panel-heading">Filters</div>
  <div class="panel-body">
    <p class="lead">
	    <img src="/img/here-be-dragons.png" alt="HERE BE DRAGONS" width="80" style="-webkit-transform: scaleX(-1)"/>
      <strong>HERE BE FILTERS</strong>
	    <img src="/img/here-be-dragons.png" alt="HERE BE DRAGONS" width="80" />
    </p>
  </div>
  <div class="panel-footer">Total hypotheses: 3/10</div>
</div>

{{#each board.hypotheses key="staticKey" as |hyp|}}
  <hypothesis-block hypothesis={{hyp}} />
{{else}}
  <p class="jumbotron lead text-center">
      No hypotheses for this board yet...<br />
      Write or generate one with the buttons above!
  </p>
{{/each}}
