{{! panel panel-default }}

<div class="actions btn-group btn-group-xs" role="group" aria-label="Actions">
  <button class="btn btn-danger btn-xs remove" {{action "remove"}} aria-label="Remove">
    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
  </button>
</div>

<article class="panel-body">
  <span>{{hypothesis.customer.title}}</span> pode <span>{{hypothesis.problem.title}}</span>.
  {{#if hypothesis.solution}}
    Resolve com <span>{{hypothesis.solution.title}}</span>
  {{/if}}
  {{#if hypothesis.risk}}
    {{if hypothesis.solution ", mas pode" "Mas talvez possa"}}
	  <span>{{hypothesis.risk.title}}</span>.
  {{/if}}
</article>

<footer class="panel-footer container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="method">
        <p title="Method" data-toggle="tooltip">
          <span class="glyphicon glyphicon-wrench"></span>
          {{#if hypothesis.method}}
            {{hypothesis.method}}
          {{else}}
            <em>Not defined</em>
          {{/if}}
        </p>

        <button class="btn btn-default btn-xs" {{action "editMethod"}} aria-label="Edit method">
          <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
        </button>
      </div>
    </div>

    <div class="col-xs-12 col-sm-6">
      <div class="criterion">
        <p title="Criterion" data-toggle="tooltip">
          <span class="glyphicon glyphicon-dashboard"></span>
          <span class="text-success">{{hypothesis.criterion_valid}}</span> /
          <span class="text-warning">{{hypothesis.criterion_invalid}}</span>
          [<span class="text-info">{{hypothesis.criterion_total}}</span>]
        </p>

        <div class="btn-group btn-group-split btn-success">
          <button class="btn btn-success btn-xs" {{action "editMethod"}} aria-label="Edit method">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
          </button>

          <button class="btn btn-success btn-xs" {{action "editMethod"}} aria-label="Edit method">
            <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
          </button>
        </div>

        <div class="btn-group btn-group-split btn-warning">
          <button class="btn btn-warning btn-xs" {{action "editMethod"}} aria-label="Edit method">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
          </button>

          <button class="btn btn-warning btn-xs" {{action "editMethod"}} aria-label="Edit method">
            <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
          </button>
        </div>

        <div class="btn-group btn-group-split btn-info">
          <button class="btn btn-info btn-xs" {{action "editMethod"}} aria-label="Edit method">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
          </button>

          <button class="btn btn-info btn-xs" {{action "editMethod"}} aria-label="Edit method">
            <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
          </button>
        </div>
      </div>
    </div>
  </div>
</footer>