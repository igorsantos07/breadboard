<h2>
  {{title}}
  <button class="btn btn-info btn-xs pull-right" type="button" aria-label="Add {{singular}}" data-toggle="modal" data-target="#add-item-{{singular}}">
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
  </button>
</h2>

{{#each item in items}}
  {{#item-block item=item}}
    {{body}}
  {{/item-block}}
{{/each}}

{{#modal-dialog ID="add-item-{{name}}" title="New {{name}}" small=true name=singular}}
  {{!here follows input fields for new stuff}}
{{/modal-dialog}}
