<h2>
  {{view.plural}}
  <button class="btn btn-default btn-xs pull-right" type="button"
          aria-label="Add {{view.title}}" data-toggle="modal" data-target="#add-{{view.title}}">
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
  </button>
</h2>

{{#each item in view.items}}
  {{item-block item=item}}
{{/each}}

<modal-dialog modal-id="add-{{name}}" title="New {{name}}" small=true name=view.title ok-type="success" ok="Save"
confirmAction='addItem'>
  {{input type="hidden" name="type" value=view.new.type}}
  <div class="form-group">
	  <label for="add-{{view.singular}}-title">Title</label>
    {{input type="text" class="form-control" name="title" value=view.new.title}}
  </div>

  <div class="form-group">
	  <label for="add-{{view.singular}}-title">Description</label>
    {{textarea class="form-control" name="description" value=view.new.description}}
  </div>
</modal-dialog>
